<UserControl x:Class="DotNetWpfApp.View.DetailsProduit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DotNetWpfApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="300">
            <Label>
                Code du produit
            </Label>
            <TextBox Text="{Binding Code}"/>
            <Label>
                Lidelle du produit
            </Label>
            <TextBox Text="{Binding Libelle}"/>
            <Label>
                Description du produit
            </Label>
            <TextBox Text="{Binding Description}"/>
            <Label>
                Prix du produit
            </Label>
            <TextBox Text="{Binding Prix}"/>
            <Label>
                Stock du produit
            </Label>
            <TextBox Text="{Binding Stock}"/>
        </StackPanel>
    </Grid>
</UserControl>
