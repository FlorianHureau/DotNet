<Window x:Class="DotNetWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:my="clr-namespace:DotNetWpfApp.View"
        xmlns:local="clr-namespace:DotNetWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="319" LastChildFill="False" VerticalAlignment="Top" Width="517">
            <Label x:Name="label" Content="Application Master Details" Height="31" VerticalAlignment="Top" DockPanel.Dock="Top"/>
            <my:ListeProduit DataContext="{Binding ListeProduitViewModel}" DockPanel.Dock="Left"></my:ListeProduit>
        </DockPanel>
    </Grid>
</Window>
